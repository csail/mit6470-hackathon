<%= @user.name %>

<% @problems.each do |prob| %>
  <%= prob.name %>
  <% solns = prob.solutions.where(:user_id => @user.id) %>
  <% if solns.length == 0 %>
    No solutions submitted
  <% else %>
    <% solns.each do |soln| %>
      <%= soln.submission %>
    <% end %>
  <% end %>
<% end %>
 
